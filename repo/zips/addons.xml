<addons>
<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.mosestylebuild"
       name="Mosestyle Build Installer"
       version="1.5.2"
       provider-name="Mosestyle">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary>Installs the Mosestyle build ZIP</summary>
    <description>Downloads and extracts your build ZIP, then prompts to restart Kodi.</description>
    <platform>all</platform>
  </extension>
</addon>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.mosestyle"
       name="Mosestyle Repository"
       version="1.0.0"
       provider-name="Mosestyle">
  <requires>
    <import addon="xbmc.addon" version="17.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="Mosestyle Repo">
    <dir>
      <info compressed="false">https://raw.githubusercontent.com/mosestyle/kodis/gh-pages/repo/zips/addons.xml</info>
      <checksum>https://raw.githubusercontent.com/mosestyle/kodis/gh-pages/repo/zips/addons.xml.md5</checksum>
      <datadir zip="true">https://raw.githubusercontent.com/mosestyle/kodis/gh-pages/repo/zips/</datadir>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Repository for Mosestyle Build Installer</summary>
    <description>Provides the Mosestyle Build Installer add-on and updates.</description>
    <platform>all</platform>
  </extension>
</addon>

<?xml version="1.0" encoding="UTF-8"?>
<addon id="service.mosestyle.setup"
       name="Mosestyle First-Run Setup"
       version="1.1.0"
       provider-name="Mosestyle">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.service" start="startup" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <summary>Applies Mosestyle's GUI settings on first run</summary>
    <description>Sets Player, Subtitles, Audio, Add-ons, Media, Regional, etc. Runs once, then disables itself.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
